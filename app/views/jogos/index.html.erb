<div class="page-header">
  <%= link_to new_jogo_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Jogo
  <% end %>
  <h1>Listando jogos</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nome</th>
            <th>Odd</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @jogos) do |jogo| %>
            <td><%= jogo.nome %></td>
            <td><%= jogo.odd %></td>
            <td><%= link_to 'Mostrar', jogo %></td>
        <td><%= link_to 'Editar', edit_jogo_path(jogo) %></td>
        <td><%= link_to 'Apagar', jogo, method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
